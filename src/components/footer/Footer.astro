---
import logo from "@/assets/imgs/logo.webp";
import { getTranslations } from "../../i18n/translations";

const t = getTranslations("es");
---

<footer
    class="relative bg-[#050505] border-t border-[#7E23D9]/20 px-6 py-12 overflow-hidden"
>
    <div class="absolute inset-0 opacity-10">
        <div
            class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-[#7E23D9] rounded-full filter blur-[120px]"
        >
        </div>
        <div
            class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-[#B679F2] rounded-full filter blur-[120px]"
        >
        </div>
    </div>

    <div
        class="absolute inset-0 opacity-20
        bg-[repeating-linear-gradient(0deg,rgba(255,255,255,0.1)_0px,rgba(255,255,255,0.1)_1px,transparent_1px,transparent_55px),repeating-linear-gradient(90deg,rgba(255,255,255,0.1)_0px,rgba(255,255,255,0.1)_1px,transparent_1px,transparent_55px)]"
    >
    </div>

    <div class="relative max-w-7xl mx-auto z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
            <div class="lg:col-span-2">
                <div class="mb-6">
                    <img
                        src={logo.src}
                        alt="Create Wise Logo"
                        class="h-12 w-auto mb-4"
                    />
                    <p
                        class="text-[#F2F2F2]/70 text-sm leading-relaxed max-w-md"
                        data-i18n="footer.description"
                    >
                        {t.footer.description}
                    </p>
                </div>
            </div>

            <div>
                <h4
                    class="text-white font-bold text-lg mb-4"
                    data-i18n="footer.services.title"
                >
                    {t.footer.services.title}
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="#servicios"
                            class="text-[#F2F2F2]/70 hover:text-[#B679F2] transition-colors duration-300 text-sm flex items-center gap-2 group"
                        >
                            <span
                                class="w-1 h-1 bg-[#B679F2] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                            ></span>
                            <span data-i18n="footer.services.items.0"
                                >{t.footer.services.items[0]}</span
                            >
                        </a>
                    </li>
                    <li>
                        <a
                            href="#servicios"
                            class="text-[#F2F2F2]/70 hover:text-[#B679F2] transition-colors duration-300 text-sm flex items-center gap-2 group"
                        >
                            <span
                                class="w-1 h-1 bg-[#B679F2] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                            ></span>
                            <span data-i18n="footer.services.items.1"
                                >{t.footer.services.items[1]}</span
                            >
                        </a>
                    </li>
                    <li>
                        <a
                            href="#servicios"
                            class="text-[#F2F2F2]/70 hover:text-[#B679F2] transition-colors duration-300 text-sm flex items-center gap-2 group"
                        >
                            <span
                                class="w-1 h-1 bg-[#B679F2] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                            ></span>
                            <span data-i18n="footer.services.items.2"
                                >{t.footer.services.items[2]}</span
                            >
                        </a>
                    </li>
                    <li>
                        <a
                            href="#servicios"
                            class="text-[#F2F2F2]/70 hover:text-[#B679F2] transition-colors duration-300 text-sm flex items-center gap-2 group"
                        >
                            <span
                                class="w-1 h-1 bg-[#B679F2] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                            ></span>
                            <span data-i18n="footer.services.items.3"
                                >{t.footer.services.items[3]}</span
                            >
                        </a>
                    </li>
                    <li>
                        <a
                            href="#servicios"
                            class="text-[#F2F2F2]/70 hover:text-[#B679F2] transition-colors duration-300 text-sm flex items-center gap-2 group"
                        >
                            <span
                                class="w-1 h-1 bg-[#B679F2] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                            ></span>
                            <span data-i18n="footer.services.items.4"
                                >{t.footer.services.items[4]}</span
                            >
                        </a>
                    </li>
                </ul>
            </div>

            <div>
                <h4
                    class="text-white font-bold text-lg mb-4"
                    data-i18n="footer.contact.title"
                >
                    {t.footer.contact.title}
                </h4>
                <ul class="space-y-4">
                    <li>
                        <a
                            href="mailto:marketing@create-wise.com"
                            class="group flex items-start gap-3"
                        >
                            <div
                                class="w-8 h-8 rounded-lg bg-[#7E23D9]/20 border border-[#7E23D9]/30 flex items-center justify-center shrink-0 group-hover:bg-[#7E23D9]/30 group-hover:border-[#B679F2]/50 transition-all duration-300"
                            >
                                <svg
                                    class="w-4 h-4 text-[#B679F2]"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p
                                    class="text-[#B679F2] text-xs font-semibold mb-1"
                                    data-i18n="footer.contact.emailLabel"
                                >
                                    {t.footer.contact.emailLabel}
                                </p>
                                <p
                                    class="text-[#F2F2F2]/70 text-sm hover:text-[#B679F2] transition-colors duration-300"
                                >
                                    marketing@create-wise.com
                                </p>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a
                            href="tel:+971561258995"
                            class="group flex items-start gap-3"
                        >
                            <div
                                class="w-8 h-8 rounded-lg bg-[#7E23D9]/20 border border-[#7E23D9]/30 flex items-center justify-center shrink-0 group-hover:bg-[#7E23D9]/30 group-hover:border-[#B679F2]/50 transition-all duration-300"
                            >
                                <svg
                                    class="w-4 h-4 text-[#B679F2]"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p
                                    class="text-[#B679F2] text-xs font-semibold mb-1"
                                    data-i18n="footer.contact.phoneLabel"
                                >
                                    {t.footer.contact.phoneLabel}
                                </p>
                                <p
                                    class="text-[#F2F2F2]/70 text-sm hover:text-[#B679F2] transition-colors duration-300"
                                >
                                    +971 56 125 8995
                                </p>
                            </div>
                        </a>
                    </li>
                    <li class="flex items-start gap-3">
                        <div
                            class="w-8 h-8 rounded-lg bg-[#7E23D9]/20 border border-[#7E23D9]/30 flex items-center justify-center shrink-0"
                        >
                            <svg
                                class="w-4 h-4 text-[#B679F2]"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p
                                class="text-[#B679F2] text-xs font-semibold mb-1"
                                data-i18n="footer.contact.reachLabel"
                            >
                                {t.footer.contact.reachLabel}
                            </p>
                            <p
                                class="text-[#F2F2F2]/70 text-sm"
                                data-i18n="footer.contact.reachValue"
                            >
                                {t.footer.contact.reachValue}
                            </p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="pt-8 border-t border-[#7E23D9]/20 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p
                class="text-[#F2F2F2]/50 text-sm text-center md:text-left"
                data-i18n="footer.copyright"
            >
                {t.footer.copyright}
            </p>
        </div>
    </div>
</footer>
