---
import { getTranslations } from "../../i18n/translations";

const t = getTranslations("es");

const icons = ["ðŸ“Š", "ðŸŽ¯", "ðŸš€", "ðŸ“ˆ"];

const steps = t.trabajo.steps.map((step, index) => ({
    number: String(index + 1).padStart(2, "0"),
    ...step,
    icon: icons[index],
}));
---

<section
    class="relative bg-[#050505] min-h-screen px-6 overflow-hidden flex items-center py-20"
    id="servicios"
>
    <div class="absolute inset-0 opacity-20">
        <div
            class="absolute top-1/4 right-1/4 w-96 h-96 bg-[#7E23D9] rounded-full filter blur-[120px]"
        >
        </div>
        <div
            class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-[#48168C] rounded-full filter blur-[120px]"
        >
        </div>
    </div>

    <div
        class="absolute inset-0 opacity-25 z-1
    bg-[repeating-linear-gradient(0deg,rgba(255,255,255,0.18)_0px,rgba(255,255,255,0.18)_1px,transparent_1px,transparent_55px),repeating-linear-gradient(90deg,rgba(255,255,255,0.18)_0px,rgba(255,255,255,0.18)_1px,transparent_1px,transparent_55px)]"
    >
    </div>

    <div class="relative max-w-7xl mx-auto z-10 w-full">
        <div class="text-center mb-20">
            <h2 class="font-extrabold text-white text-4xl md:text-6xl mb-6">
                <span data-i18n="trabajo.title">{t.trabajo.title}</span>
                <span
                    data-i18n="trabajo.titleHighlight"
                    class="text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]"
                >
                    {t.trabajo.titleHighlight}
                </span>
                <span data-i18n="trabajo.titleEnd">{t.trabajo.titleEnd}</span>
            </h2>
            <p
                data-i18n="trabajo.subtitle"
                class="text-[#F2F2F2]/80 text-lg md:text-xl max-w-3xl mx-auto mb-4"
            >
                {t.trabajo.subtitle}
            </p>
            <div
                class="w-24 h-1 bg-linear-to-r from-[#7E23D9] to-[#B679F2] mx-auto"
            >
            </div>
        </div>

        <div class="relative">
            <div
                class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-linear-to-r from-[#7E23D9] via-[#B679F2] to-[#7E23D9] opacity-30 transform -translate-y-1/2"
                style="top: 120px;"
            >
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6"
            >
                {
                    steps.map((step, index) => (
                        <div
                            class="step-card group relative cursor-pointer"
                            style={`animation-delay: ${index * 0.15}s`}
                        >
                            <div class="relative bg-linear-to-br from-[#48168C]/20 to-transparent border border-[#7E23D9]/30 rounded-3xl p-8 hover:border-[#B679F2]/60 transition-all duration-500 hover:scale-105 hover:shadow-[0_20px_60px_rgba(126,35,217,0.4)] backdrop-blur-sm h-full">
                                <div class="absolute -top-6 left-1/2 transform -translate-x-1/2 w-16 h-16 bg-linear-to-br from-[#7E23D9] to-[#B679F2] rounded-2xl flex items-center justify-center shadow-[0_8px_32px_rgba(126,35,217,0.6)] group-hover:scale-110 transition-transform duration-500 rotate-12 group-hover:rotate-0">
                                    <span class="text-white font-bold text-2xl">
                                        {step.number}
                                    </span>
                                </div>

                                <div class="text-6xl mb-6 mt-8 text-center group-hover:scale-110 transition-transform duration-500">
                                    {step.icon}
                                </div>

                                <div class="text-center mb-6">
                                    <h3
                                        data-i18n={`trabajo.steps.${index}.title`}
                                        class="text-2xl font-bold text-white mb-4 group-hover:text-[#B679F2] transition-colors duration-300"
                                    >
                                        {step.title}
                                    </h3>
                                    <p
                                        data-i18n={`trabajo.steps.${index}.description`}
                                        class="text-[#F2F2F2]/70 text-sm leading-relaxed"
                                    >
                                        {step.description}
                                    </p>
                                </div>

                                <div class="flex flex-wrap gap-2 justify-center">
                                    {step.metrics.map((metric, metricIndex) => (
                                        <span
                                            data-i18n={`trabajo.steps.${index}.metrics.${metricIndex}`}
                                            class="px-3 py-1.5 bg-[#7E23D9]/20 border border-[#7E23D9]/40 rounded-full text-[#B679F2] text-xs font-semibold group-hover:bg-[#7E23D9]/40 group-hover:border-[#B679F2]/60 transition-all duration-300"
                                        >
                                            {metric}
                                        </span>
                                    ))}
                                </div>

                                <div class="absolute inset-0 rounded-3xl bg-linear-to-br from-[#7E23D9]/0 to-[#B679F2]/0 group-hover:from-[#7E23D9]/10 group-hover:to-[#B679F2]/10 transition-all duration-500 pointer-events-none" />

                                <div class="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-[#B679F2]/0 group-hover:border-[#B679F2]/80 rounded-tr-3xl transition-all duration-500" />
                                <div class="absolute bottom-4 left-4 w-8 h-8 border-b-2 border-l-2 border-[#B679F2]/0 group-hover:border-[#B679F2]/80 rounded-bl-3xl transition-all duration-500" />
                            </div>

                            <div class="hidden lg:block absolute top-[120px] left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-linear-to-br from-[#7E23D9] to-[#B679F2] rounded-full shadow-[0_0_20px_rgba(126,35,217,0.8)] group-hover:scale-150 transition-transform duration-500 z-10" />
                        </div>
                    ))
                }
            </div>
        </div>

        <div class="mt-20 text-center">
            <div
                class="inline-block bg-linear-to-br from-[#48168C]/20 to-transparent border border-[#7E23D9]/30 rounded-3xl p-12 backdrop-blur-sm hover:border-[#B679F2]/60 transition-all duration-500"
            >
                <h3 class="text-3xl md:text-4xl font-bold text-white mb-6">
                    <span data-i18n="trabajo.cta.title"
                        >{t.trabajo.cta.title}</span
                    >
                    <span
                        data-i18n="trabajo.cta.titleHighlight"
                        class="text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]"
                    >
                        {t.trabajo.cta.titleHighlight}
                    </span>
                    <span data-i18n="trabajo.cta.titleEnd"
                        >{t.trabajo.cta.titleEnd}</span
                    >
                </h3>
                <p
                    data-i18n="trabajo.cta.subtitle"
                    class="text-[#F2F2F2]/70 text-lg mb-8 max-w-2xl mx-auto"
                >
                    {t.trabajo.cta.subtitle}
                </p>
                <a
                    href="#contacto"
                    class="group inline-flex items-center gap-3 px-10 py-5 bg-linear-to-r from-[#7E23D9] to-[#B679F2] rounded-2xl text-white font-bold text-lg hover:shadow-[0_20px_60px_rgba(126,35,217,0.6)] hover:scale-105 transition-all duration-500"
                >
                    <span data-i18n="trabajo.cta.button"
                        >{t.trabajo.cta.button}</span
                    >
                    <svg
                        class="w-6 h-6 group-hover:translate-x-2 transition-transform duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>

                <div
                    class="mt-8 flex flex-wrap justify-center gap-6 text-[#F2F2F2]/60 text-sm"
                >
                    {
                        t.trabajo.cta.features.map((feature, index) => (
                            <div class="flex items-center gap-2">
                                <svg
                                    class="w-5 h-5 text-[#B679F2]"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                                <span
                                    data-i18n={`trabajo.cta.features.${index}`}
                                >
                                    {feature}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInScale {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .step-card {
        animation: fadeInScale 0.8s ease-out forwards;
        opacity: 0;
    }

    @keyframes pulse {
        0%,
        100% {
            box-shadow: 0 0 20px rgba(126, 35, 217, 0.8);
        }
        50% {
            box-shadow: 0 0 40px rgba(182, 121, 242, 1);
        }
    }

    .step-card:hover .absolute.top-\[120px\] {
        animation: pulse 2s infinite;
    }
</style>
