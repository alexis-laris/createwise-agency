---

<section
  class="relative bg-[#050505] min-h-screen px-6 overflow-hidden flex items-center py-20"
  id="influencers"
>
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-[#7E23D9] rounded-full filter blur-[150px]"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-[600px] h-[600px] bg-[#B679F2] rounded-full filter blur-[150px]"
    >
    </div>
  </div>

  <div
    class="absolute inset-0 opacity-25 z-1
    bg-[repeating-linear-gradient(0deg,rgba(255,255,255,0.18)_0px,rgba(255,255,255,0.18)_1px,transparent_1px,transparent_55px),repeating-linear-gradient(90deg,rgba(255,255,255,0.18)_0px,rgba(255,255,255,0.18)_1px,transparent_1px,transparent_55px)]"
  >
  </div>

  <div class="relative max-w-7xl mx-auto z-10 w-full">
    <div class="text-center mb-14">
      <h2 class="font-extrabold text-white text-4xl md:text-6xl mb-6 mt-8">
        <span data-i18n="influencers.title">{t.influencers.title}</span>
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]"
          data-i18n="influencers.titleHighlight"
          >{t.influencers.titleHighlight}</span
        >
      </h2>
      <p
        class="text-[#F2F2F2]/80 text-lg md:text-xl max-w-3xl mx-auto"
        data-i18n="influencers.subtitle"
      >
        {t.influencers.subtitle}
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto">
      {
        influencers.map((influencer, index) => (
          <div
            class="influencer-card w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.5rem)] max-w-md cursor-pointer"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div
              class={`card-inner relative ${influencer.isPlaceholder ? "bg-linear-to-br from-[#7E23D9]/10 to-transparent border-2 border-dashed" : "bg-linear-to-br from-[#48168C]/30 to-transparent"} border border-[#7E23D9]/40 rounded-3xl p-6 backdrop-blur-sm overflow-hidden h-full transition-all duration-500`}
