                  <div class="avatar-glow absolute inset-0 rounded-full bg-linear-to-r from-[#7E23D9] to-[#B679F2] opacity-30 blur-xl transition-opacity duration-500" />

                  <div class="avatar-border relative w-full h-full rounded-full border-4 border-[#7E23D9]/40 transition-all duration-500 overflow-hidden">
                    {influencer.isPlaceholder ? (
                      <div class="w-full h-full bg-linear-to-br from-[#7E23D9]/20 to-[#B679F2]/20 flex items-center justify-center">
                        <svg
                          class="w-16 h-16 text-[#B679F2]/50"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 4v16m8-8H4"
                          />
                        </svg>
                      </div>
                    ) : (
                      <img
                        src={influencer.image}
                        alt={influencer.name}
                        class="avatar-img w-full h-full object-cover grayscale transition-all duration-500"
                      />
                    )}
                  </div>

                  {influencer.isPlaceholder ? (
                    <div class="badge-icon absolute -bottom-2 -right-2 w-10 h-10 bg-linear-to-br from-[#7E23D9] to-[#B679F2] rounded-full flex items-center justify-center shadow-lg transition-transform duration-300">
                      <svg
                        class="w-6 h-6 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                    </div>
                  ) : (
                    <div class="badge-icon absolute -bottom-2 -right-2 w-10 h-10 bg-linear-to-br from-[#7E23D9] to-[#B679F2] rounded-full flex items-center justify-center shadow-lg transition-transform duration-300">
                      <svg
                        class="w-6 h-6 text-white"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </div>
                  )}
                </div>
              </div>

              <div class="text-center mb-6 relative z-10">
                <h3
                  class={`card-title text-2xl font-bold mb-2 transition-colors duration-300 ${influencer.isPlaceholder ? "text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]" : "text-white"}`}
                >
                  {influencer.isPlaceholder ? (
                    <span data-i18n="influencers.placeholder.name">
                      {t.influencers.placeholder.name}
                    </span>
                  ) : (
                    influencer.name
                  )}
                </h3>

                <p
                  class="text-[#F2F2F2]/70 text-sm mb-1"
                  data-i18n={`influencers.roles.${influencer.roleKey}`}
                >
                  {
                    t.influencers.roles[
                      influencer.roleKey as keyof typeof t.influencers.roles
                    ]
                  }
                </p>

                <div
                  class={`inline-block px-3 py-1 ${influencer.isPlaceholder ? "bg-[#7E23D9]/30 animate-pulse" : "bg-[#7E23D9]/20"} border border-[#7E23D9]/40 rounded-full text-[#B679F2] text-xs font-semibold mt-2`}
                >
                  <span
                    data-i18n={`influencers.specialties.${influencer.specialtyKey}`}
                  >
                    {
                      t.influencers.specialties[
                        influencer.specialtyKey as keyof typeof t.influencers.specialties
                      ]
                    }
                  </span>
                </div>
              </div>

              <div class="flex justify-center gap-6 mb-6 pb-6 border-b border-[#7E23D9]/20 relative z-10">
                <div class="text-center">
                  <div class="text-xl font-bold text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]">
                    {influencer.isPlaceholder ? (
                      <span data-i18n="influencers.placeholder.followers">
                        {t.influencers.placeholder.followers}
                      </span>
                    ) : (
                      influencer.followers
                    )}
                  </div>
                  <div
                    class="text-[#F2F2F2]/50 text-xs"
                    data-i18n="influencers.stats.followers"
                  >
                    {t.influencers.stats.followers}
                  </div>
                </div>
                <div class="text-center">
                  <div class="text-xl font-bold text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]">
                    {influencer.isPlaceholder ? (
                      <span data-i18n="influencers.placeholder.engagement">
                        {t.influencers.placeholder.engagement}
                      </span>
                    ) : (
                      influencer.stats.engagement
                    )}
                  </div>
                  <div
                    class="text-[#F2F2F2]/50 text-xs"
                    data-i18n="influencers.stats.engagement"
                  >
                    {t.influencers.stats.engagement}
                  </div>
                </div>
                <div class="text-center">
                  <div class="text-xl font-bold text-transparent bg-clip-text bg-linear-to-r from-[#7E23D9] to-[#B679F2]">
                    {influencer.isPlaceholder ? (
                      <span data-i18n="influencers.placeholder.avgViews">
                        {t.influencers.placeholder.avgViews}
                      </span>
                    ) : (
                      influencer.stats.avgViews
                    )}
                  </div>
                  <div
                    class="text-[#F2F2F2]/50 text-xs"
                    data-i18n="influencers.stats.avgViews"
                  >
                    {t.influencers.stats.avgViews}
                  </div>
                </div>
              </div>

              <div class="relative z-10">
                <div class="flex justify-center gap-3">
                  {Object.entries(influencer.socials).map(
                    ([platform, data]) => {
                      type Platform = keyof typeof socialIcons;
                      const typedPlatform = platform as Platform;
                      return (
                        <a
                          href={data.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class={`w-11 h-11 bg-[#0a0a0a]/60 border border-[#7E23D9]/30 rounded-xl flex items-center justify-center text-[#F2F2F2]/60 ${socialIcons[typedPlatform].color} hover:border-[#B679F2]/60 hover:scale-110 hover:shadow-lg transition-all duration-300 group/social relative`}
                          aria-label={`${platform} - ${data.followers} followers`}
                        >
                          <Fragment
                            set:html={socialIcons[typedPlatform].icon}
                          />

                          <div class="absolute -top-12 left-1/2 -translate-x-1/2 px-3 py-2 rounded-lg bg-black/90 text-white text-xs opacity-0 group-hover/social:opacity-100 transition-opacity duration-300 whitespace-nowrap border border-[#7E23D9]/40 pointer-events-none z-50">
                            <div class="font-semibold capitalize">
                              {platform}
                            </div>
                            <div class="text-[#B679F2]">
                              {data.followers}{" "}
                              <span data-i18n="influencers.socialLabels.followers">
                                {t.influencers.socialLabels.followers}
                              </span>
                            </div>
                            <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-black/90 border-b border-r border-[#7E23D9]/40 rotate-45" />
                          </div>
                        </a>
                      );
                    },
                  )}
                </div>
              </div>

              <div class="absolute top-4 right-4 z-10">
