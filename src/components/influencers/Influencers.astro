<style>
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .influencer-card:hover .card-inner {
    transform: translateY(-8px);
    border-color: rgba(182, 121, 242, 0.5);
    box-shadow: 0 30px 90px rgba(126, 35, 217, 0.4);
  }

  .influencer-card:hover .glow-overlay {
    opacity: 1;
  }

  .influencer-card:hover .avatar-glow {
    opacity: 0.6;
  }

  .influencer-card:hover .avatar-border {
    border-color: rgba(182, 121, 242, 0.8);
  }

  .influencer-card:hover .avatar-img {
    filter: grayscale(0);
  }

  .influencer-card:hover .badge-icon {
    transform: scale(1.1);
  }

  .influencer-card:hover .card-title {
    color: #b679f2;
  }

  .influencer-card:hover .card-title.text-transparent {
    transform: scale(1.05);
  }
</style>
